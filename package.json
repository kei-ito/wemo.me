{
    "private": true,
    "name": "wemo.me",
    "version": "0.0.0",
    "license": "Apache-2.0",
    "scripts": {
        "start": "ts-node rollup/start.ts",
        "build": "ts-node rollup/build.ts",
        "test:type": "tsc --noEmit",
        "test": "run-s test:*"
    },
    "devDependencies": {
        "@commitlint/cli": "^8.3.5",
        "@commitlint/config-conventional": "^8.3.4",
        "@nlib/lint": "^3.17.1",
        "@rollup/plugin-commonjs": "^11.0.1",
        "@rollup/plugin-node-resolve": "^7.0.0",
        "@rollup/plugin-sucrase": "^3.0.0",
        "@typescript-eslint/eslint-plugin": "^2.17.0",
        "@typescript-eslint/parser": "^2.17.0",
        "conventional-changelog-cli": "^2.0.31",
        "eslint": "^6.8.0",
        "husky": "^4.2.1",
        "lint-staged": "^10.0.2",
        "npm-run-all": "^4.1.5",
        "rollup": "^1.29.1",
        "rollup-plugin-embed-css": "^1.0.16",
        "sable": "^0.5.7",
        "systemjs": "^6.1.9",
        "ts-node": "^8.6.2",
        "typescript": "^3.7.5"
    },
    "eslintConfig": {
        "extends": "./node_modules/@nlib/lint/.eslintrc.json",
        "env": {
            "es6": true
        },
        "overrides": [
            {
                "files": [
                    "rollup/**"
                ],
                "env": {
                    "node": true
                },
                "rules": {
                    "no-console": "off"
                }
            }
        ]
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ],
        "rules": {
            "subject-case": [
                0
            ]
        }
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.ts": [
            "eslint"
        ]
    }
}
