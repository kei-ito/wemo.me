{
    "private": true,
    "name": "wemo.me",
    "version": "0.0.0",
    "license": "Apache-2.0",
    "scripts": {
        "prepare": "ts-node build/indexen.ts",
        "start:rollup": "ts-node build/start.ts",
        "start": "run-s prepare start:*",
        "build:rollup": "ts-node build/build.ts",
        "build": "run-s prepare build:*",
        "test:type": "tsc --noEmit",
        "test": "run-s test:*",
        "lint:ts": "eslint --ext .ts --no-error-on-unmatched-pattern build modules src",
        "lint:js": "eslint --ext .js --no-error-on-unmatched-pattern build modules src",
        "lint": "run-s lint:*"
    },
    "dependencies": {
        "react": "^16.12.0",
        "react-dom": "^16.12.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^8.3.5",
        "@commitlint/config-conventional": "^8.3.4",
        "@nlib/indexen": "^3.17.1",
        "@nlib/lint": "^3.17.1",
        "@rollup/plugin-commonjs": "^11.0.2",
        "@rollup/plugin-node-resolve": "^7.1.1",
        "@rollup/plugin-replace": "^2.3.1",
        "@rollup/plugin-sucrase": "^3.0.0",
        "@types/react": "^16.9.19",
        "@types/react-dom": "^16.9.5",
        "@types/react-redux": "^7.1.7",
        "@typescript-eslint/eslint-plugin": "^2.19.0",
        "@typescript-eslint/parser": "^2.19.0",
        "@wemo.me/eslint-plugin": "file:eslintPlugin",
        "conventional-changelog-cli": "^2.0.31",
        "eslint": "^6.8.0",
        "husky": "^4.2.1",
        "lint-staged": "^10.0.7",
        "npm-run-all": "^4.1.5",
        "react-redux": "^7.1.3",
        "redux-saga": "^1.1.3",
        "rollup": "^1.31.0",
        "rollup-plugin-embed-css": "^1.0.16",
        "sable": "^0.5.7",
        "systemjs": "^6.2.2",
        "ts-node": "^8.6.2",
        "typesafe-actions": "^5.1.0",
        "typescript": "^3.7.5"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ],
        "rules": {
            "subject-case": [
                0
            ]
        }
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.js": [
            "eslint"
        ],
        "*.ts": [
            "eslint"
        ]
    },
    "renovate": {
        "extends": [
            ":ignoreModulesAndTests",
            ":unpublishSafe",
            ":semanticPrefixChore",
            ":prNotPending",
            ":prConcurrentLimit10",
            ":prHourlyLimitNone",
            ":label(dependencies)",
            ":automergeMinor"
        ]
    }
}
